@page "/"
@using Chirp.Application.Services.Interface
@using Chirp.Application.DTO
@model Chirp.Web.Pages.PublicView
@inject IAuthorService _authorService;
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>

    @if (Model.IdentityAuthor != null)
    {
        <div class="cheepbox">
            <h3>What's on your mind @(Model.IdentityAuthor.Name)?</h3>
            <form method="post" asp-controller="Public" asp-action="Index">
                <input style="float: left" type="text" asp-for="Text" minlength="0" maxlength="160" required/>
                <input type="submit" value="Share"/>
            </form>
        </div>
    }
    @if (Model.Cheeps.Any())
    {

        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                var author = _authorService.FindAuthorById(cheep.AuthorId);

                var profilePic = string.IsNullOrWhiteSpace(author?.ProfilePicPath)
                    ? "/images/default_profile_pic.png"
                    : author.ProfilePicPath;

                bool IsFollowing = Model.Following.Any(
                a =>
                {
                    if (a == null)
                    {
                        return false;
                    }

                    return a.Id == cheep.AuthorId;
                });

                <li>
                    <div class="cheep-header">

                        <div class="cheep-header">
                            <div class="cheep-author">
                                <img src="@profilePic" alt="@cheep.Author" class="cheep-profile-pic" />
                                <a href="/@cheep.AuthorId">@cheep.Author</a>

                                @if (Model.IdentityAuthor != null && cheep.AuthorId != Model.IdentityAuthor.Id)
                                {
                                    <form method="post" asp-page-handler="ToggleFollow" style="display:inline;">
                                        <input type="hidden" name="followeeId" value="@cheep.AuthorId" />
                                        <button class="small-button" type="submit">
                                            @(Model.Following.Any(f => f?.Id == cheep.AuthorId) ? "Unfollow" : "Follow")
                                        </button>
                                    </form>
                                }
                            </div>

                            <div class="cheep-karma">
                                ⭐ @author?.karma
                            </div>
                        </div>
                    </div>

                    <span class="cheep-message">@cheep.Message</span><br />
                    <small>&mdash; @cheep.CreatedDate</small>

                    <div class="like-container">
                        <form method="post" asp-page-handler="CheepLike">
                            <input type="hidden" name="cheepId" value="@cheep.cheepId" />
                            <input type="hidden" name="authorId" value="@cheep.AuthorId" />
                            <button type="submit" class="like-button">
                                <img src="~/images/ThumpsUp.png" class="icon" />
                                (@cheep.Likes)
                            </button>
                        </form>

                        <form method="post" asp-page-handler="CheepDislike">
                            <input type="hidden" name="cheepId" value="@cheep.cheepId" />
                            <input type="hidden" name="authorId" value="@cheep.AuthorId" />
                            <button type="submit" class="dislike-button">
                                <img src="~/images/ThumpsDown.png" class="icon" />
                                (@cheep.Dislikes)
                            </button>
                        </form>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    <div class="pagination">

        @if (Model.CurrentPage > 1)
        {
            <a href="/?page=@(Model.CurrentPage - 1)">Previous</a>
        }

        @if (Model.Cheeps.Count() == 32)
        {
            <a href="/?page=@(Model.CurrentPage + 1)">Next</a>
        }
    </div>
</div>
