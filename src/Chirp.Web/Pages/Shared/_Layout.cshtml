@using Chirp.Application.Services.Interface
@using Chirp.Web.Services
@inject IAuthorService authorService

@{
    var userId = SessionAuth.GetUserId(Context.Session);
    var isSignedIn = !string.IsNullOrWhiteSpace(userId);
    var currentAuthor = isSignedIn ? authorService.FindAuthorById(userId!) : null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon/favicon.ico" asp-append-version="true" />
</head>
<body>
<div class=page>
    <h1><img src="/images/Icon.png" alt="Icon"/>Chirp!</h1>
        <div class=navigation>
            @if (isSignedIn && currentAuthor != null)
            {
                <div>
                    <a href="/@(currentAuthor.Id)">my timeline</a> |
                    <a href="/">public timeline</a> |
                    <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage your account">Account</a> |
                    <a id="logout" asp-area="Identity" asp-page="/Account/Logout">logout [@(currentAuthor.Name)]</a>
                </div>
            }
            else
            {
                <div>
                    <a href="/">public timeline</a> |
                    <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a> |
                    <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
            }
        </div>
    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
